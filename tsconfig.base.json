{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "paths": {
      "@ac/auth": ["libs/auth/src/index.ts"],
      "@ac/chats": ["libs/chats/src/index.ts"],
      "@ac/common-ui": ["libs/common-ui/src/index.ts"],
      "@ac/data-access": ["libs/data-access/src/index.ts"],
      "@ac/interfaces/*": ["libs/interfaces/src/lib/*"],
      "@ac/layout": ["libs/layout/src/index.ts"],
      "@ac/posts": ["libs/posts/src/index.ts"],
      "@ac/profile": ["libs/profile/src/index.ts"],
      "@ac/shared": ["libs/shared/src/index.ts"]
    },
    "baseUrl": ".",
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
